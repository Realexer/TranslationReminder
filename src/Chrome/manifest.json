{
  "manifest_version": 2,

  "name": "Translation Reminder",
  "description": "Extension to remind you translation",
  "version": "1.0",

  "permissions": [
    "*"
  ],

  "web_accessible_resources": [
	"foreground.js"
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}