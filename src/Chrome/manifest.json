{
	"manifest_version": 2,

	"name": "Translation Reminder",
	"description": "Extension that helps you to remember new words.",
	"version": "1.0",

	"permissions": [
		"contextMenus",
		"activeTab",
		"tabs",
		"http://*/*",
		"https://*/*"
	],

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["scripts/Props.js", "scripts/Extensions.js", "scripts/Helper.js", "scripts/DB.js", "scripts/Ajax.js", "scripts/BingClient.js", "scripts/Frontend.js", "foreground.js"],
			"css": ["css/common.css", "css/page-inject.css"]
		}
	],
	
	"icons": {
		"16": "img/icon.png",
		"48": "img/icon.png",
		"128": "img/icon.png"
	},

	"background": {
		"persistent": false,
		"scripts": [
			"scripts/Props.js",
			"scripts/Extensions.js",
			"scripts/Helper.js",
			"scripts/WebClient.js",
			"scripts/DB.js",
			"background.js"
		]
	},

	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "BrowserPopup.html"
	},
	
	"options_page": "Options.html"
}