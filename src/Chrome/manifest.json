{
	"manifest_version": 2,

	"name": "Translation Reminder",
	"description": "Extension to remind you translation",
	"version": "1.0",

	"permissions": [
		"activeTab",
		"tabs",
		"http://*/*",
		"https://*/*"
	],

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["scripts/Helper.js", "scripts/Frontend.js", "foreground.js"]
		}
	],

	"background": {
		"persistent": false,
		"scripts": [
			"scripts/Extensions.js",
			"scripts/Helper.js",
			"scripts/WebClient.js",
			"scripts/DB.js",
			"background.js"
		]
	},

	"browser_action": {
		"default_icon": "img/icon.png",
		"default_popup": "popup.html"
	}
}